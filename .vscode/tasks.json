{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				// options
				"-Wall", // show all warnings
				// "-v", // verbose info
				"-g", // debuggable
				"-std=c++17", // c++ standard version
				// to compile
				"${workspaceFolder}/*.cpp",
				// include
				"-I${workspaceFolder}/include/",
				// output
				"-o",
				"${workspaceFolder}/bin/output"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true // clear console before build
			}
		}
	]
}
